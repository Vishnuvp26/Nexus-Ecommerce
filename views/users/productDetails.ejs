<!-- Add to cart -->
<script>
    function addToCart(productId) {
        axios.post('/add-to-cart', { productId: productId })
            .then(function (response) {
                console.log(response.data);
                Swal.fire({
                    icon: 'success',
                    title: 'Product added to cart successfully!',
					customClass: {
                        icon: 'swal2-icon-custom',
                        content: 'swal2-content-custom',
                    }
                });
            })
            .catch(function (error) {
                console.error('Error adding to cart:', error);
                Swal.fire({
                    text: 'Product already exists in cart',
                });
            });
    }
</script>
<style>
    .swal2-icon-custom {
        font-size: 8px !important;	
    }
    .swal2-content-custom {
        font-size: 5px !important;
		font-family:'Poppins-Regular';
    }
</style>

<!-- Wishlist -->
<script>	
// Aadd product to wishlist
const addToWishlist = async (productId) => {
    try {
        const response = await axios.post(`/wishlist/add?productId=${productId}`);
        if (response.data.success) {
            Swal.fire({
                icon: 'success',
                text: 'Product added to wishlist!',
            });
        } else {
            Swal.fire({
                text: 'Product already in wishlist!',
            });
        }
    } catch (error) {	
        console.error('Error adding product to wishlist:', error);
        Swal.fire({
            icon: 'error',
            title: 'Error',
            text: 'Failed to add product to wishlist.',
        });
    }
};
</script>