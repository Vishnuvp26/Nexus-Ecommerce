<%- include("../layout/header") %>
	<!-- Navbar -->
	<%- include("../layout/navbar") %>

	<!-- Carousel -->
	<%- include("../layout/carousel") %>
	
	<!-- Banner -->
	<%- include("../layout/banner") %>

	<!-- Product -->
	<section class="bg0 p-t-23 p-b-140">
		<div class="container">
			<div class="p-b-10">
				<h3 class="ltext-103 cl5">
					Product Overview
				</h3>
			</div>

			<div class="row isotope-grid">
				<% let count = 0; %>
				<% products.forEach(product => { %>
					<% if (count < 4) { %>
						<div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item <%= product.category.gender %>">
							<div class="block2">
								<div class="block2-pic hov-img0">
									<a href="/productDetails?productId=<%= product._id %>">
										<img src="/productimages/<%= product.image[0] %>" alt="IMG-PRODUCT">
									</a>
									<a href="/productDetails?productId=<%= product._id %>" class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04 js-show-modal1">
										Quick View
									</a>
								</div>
								<div class="block2-txt flex-w flex-t p-t-14">
									<div class="block2-txt-child1 flex-col-l">
										<a href="/productDetails?productId=<%= product._id %>" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
											<%= product.productName %>
										</a>
										<span class="stext-105 cl3">
											â‚¹ <%= product.price %>
										</span>
										<span class="stext-106 cl3">
											<% if (product.quantity >= 10) { %>
											<span style="color: green;">in stock</span>
											<% } else if (product.quantity > 0) { %>
												only <%= product.quantity %> left in stock
											<% } else { %>
												<span style="color: red;">out of stock</span>
											<% } %>
										</span>
									</div>
									
									<!-- WISHLIST ICON -->
									<!-- <div class="block2-txt-child2 flex-r p-t-3">
										<a href="#" class="btn-addwish-b2 dis-block pos-relative js-addwish-b2">
										<img class="icon-heart1 dis-block trans-04" src="images/icons/icon-heart-01.png" alt="ICON">
										<img class="icon-heart2 dis-block trans-04 ab-t-l" src="images/icons/icon-heart-02.png" alt="ICON">
										</a>
									</div> -->
									
								</div>
							</div>
						</div>
						<% count++; %>
					<% } %>
				<% }) %>
			</div>
			
			<!-- Shop -->
			<div class="flex-c-m flex-w w-full p-t-45">
				<a href="#" class="flex-c-m stext-101 cl5 size-103 bg2 bor1 hov-btn1 p-lr-15 trans-04">
					Explore Shop
				</a>
			</div>
		</div>
	</section>

<%- include("../layout/footer.ejs") %>